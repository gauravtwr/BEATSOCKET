<div class="container text-center">
  <h2>{{title}}</h2>
  <h3>Welcome {{user.name}}</h3>
  <a href="/">
    <button class="btn btn-danger">
      <i class="fa fa-power-off"></i>
      Logout
    </button>
  </a><br /><br />
  
    {{#if role}}
      <a href="/song/upload/{{user.id}}">
        <button class="btn btn-primary">
          <i class="fa fa-music"></i>
          Song upload
        </button>
      </a>
    <div class="container text-center">
        <h3>Your uploads</h3>
        <table class="table">
          <thead>
            <tr>
                <th>Title</th>
                <th>Duration</th>
                <th>Genre</th>
                <th>Language</th>
                <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each uploads}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.duration}}</td>
                <td>{{this.genre}}</td>
                <td>{{this.language}}</td>
                <td><a href="/song/delete/{{../user.id}}/{{this.id}}"><i class="fa fa-trash fa-2x"></i></a> </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      
    </div>
    {{/if}}
    <div class="container text-center">
        <h3>Our songs</h3>
        <table class="table">
          <thead>
            <tr>
                <th>Title</th>
                <th>Duration</th>
                <th>Genre</th>
                <th>Language</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
          </thead>
          <tbody>
        {{#each songs}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.duration}}</td>
                <td>{{this.genre}}</td>
                <td>{{this.language}}</td>
                <td><a href="/song/play/{{../user.id}}/{{this.id}}"><i class="fa fa-play-circle fa-2x"></i></a> </td>
                <td><a href="/song/like/{{../user.id}}/{{this.id}}"><i class="fa fa-thumbs-up fa-2x"></i></a> </td>
                {{#if ../playlist}}
                <td><a href="/user/playlist/{{../user.id}}/{{this.id}}"><i class="fa fa-plus fa-2x"></i> playlist</a> </td>
                {{else}}
                <td><a style="color: red;" href="/user/playlist/{{../user.id}}/{{this.id}}"><i class="fa fa-times fa-2x"></i> playlist</a> </td>
                {{/if}}
            </tr>
        {{/each}}
          </tbody>
        </table>
      
    </div>
  </div>

</div>