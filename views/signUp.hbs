<link rel="stylesheet" href="/css/sign_up.css" />

<div class="navbar">
  <div class="logo">
    <a href="/">
      <img src="/img/Group 430.png" height="100" width="100" />
    </a>
  </div>
</div>

<div class="main">
  <section class="left">
    <div class="illustration"></div>
  </section>
  <section class="right">
    <div class="form-container">
      <h1>Create a new Account...</h1>
      <!-- Form -->
      <form
        class="form"
        class="text-start"
        id="sign-up-form"
        action="/user/signUp"
        method="POST"
      >
        <div style="color: red; font-weight:bold;">
          {{title}}
        </div>
        <div class="input-container">
          <div class="form-group p-2">
            <label>Role : </label>
            <input
              class="form-check-input"
              type="radio"
              id="Artist"
              name="role"
              value="Artist"
            />
            <label for="Artist">Artist</label>
            <input
              class="form-check-input"
              type="radio"
              id="User"
              name="role"
              value="User"
            />
            <label for="User">User</label>
          </div>
        </div>
        <div class="input-container">
          <label for="firstName">Name</label>
          <input
            class="input form-control"
            type="text"
            name="name"
            value="{{user.name}}"
            placeholder="Name"
          />
          <div class="form-group">
            {{user.nameError}}
          </div>
        </div>

        <div class="input-container">
          <label>Phone number</label>
          <input
            class="input"
            type="text"
            name="phone"
            placeholder="Phone no."
            value="{{user.phone}}"
          />
          <div class="form-group">
            {{user.phoneError}}
          </div>
        </div>

        <div class="input-container">
          <label>UserId</label>
          <input
            class="input"
            type="text"
            name="userid"
            placeholder="User Id"
            value="{{user.userid}}"
          />
          <div class="form-group">
            {{user.useridError}}
          </div>
        </div>

        <div class="input-container">
          <label>Email</label>
          <input
            class="input"
            type="email"
            name="email"
            placeholder="Email"
            value="{{user.email}}"
          />
          <div class="form-group">
            {{user.emailError}}
          </div>
        </div>

        <div class="input-container">
          <label for="password">Password</label>

          <input
            class="input"
            type="password"
            name="password"
            placeholder="Password"
          />
          <div class="form-group">
            {{user.passwordError}}
          </div>
        </div>

        <div class="input-container">
          <label for="password">Confirm Password</label>

          <input
            class="input"
            type="password"
            name="confirmPassword"
            placeholder="Confirm Password"
          />
          <div class="form-group">
            {{user.confirmPasswordError}}
          </div>
        </div>

        <div class="terms-container">
          <label class="checkboxContainer">
            <input type="checkbox" />
            <div class="checkmark"></div>
            I agree to all the
            <a href="#">Terms and Conditions</a>
          </label>
        </div>

        <button class="btn" type="submit">Sign Up</button>
      </form>

      <h2>Already have an account? <a href="/user/login">Login</a></h2>
    </div>
  </section>
</div>