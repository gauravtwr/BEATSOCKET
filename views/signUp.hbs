<div class="container text-center" style="padding: 2%;">
  <h1>Signup</h1>
  <form
    class="text-start"
    id="sign-up-form"
    action="/user/signUp"
    method="POST"
  >
    <div style="color: red; font-weight:bold;">
      {{title}}
    </div>
    <input type="hidden" name="_id" value="{{user._id}}" />
    <div>
      <div class="form-group p-2">
        <label>Role : </label>
        <input
          class="form-check-input"
          type="radio"
          id="Artist"
          name="role"
          value="Artist"
        />
        <label for="Artist">Artist</label>
        <input
          class="form-check-input"
          type="radio"
          id="User"
          name="role"
          value="User"
        />
        <label for="User">User</label>
      </div>

      <div class="form-group p-2">
        <label>Name</label>
        <input
          class="form-control"
          type="text"
          name="name"
          value="{{user.name}}"
          placeholder="Name"
        />
        <div class="form-group">
          {{user.nameError}}
        </div>
      </div>

      <input
        type="text"
        name="phone"
        placeholder="Phone no."
        value="{{user.phone}}"
      />
      <div class="form-group">
        {{user.phoneError}}
      </div>

      <input
        type="text"
        name="userid"
        placeholder="User Id"
        value="{{user.userid}}"
      />
      <div class="form-group">
        {{user.useridError}}
      </div>

      <input
        type="email"
        name="email"
        placeholder="Email"
        value="{{user.email}}"
      />
      <div class="form-group">
        {{user.emailError}}
      </div>

      <input type="password" name="password" placeholder="Password" />
      <div class="form-group">
        {{user.passwordError}}
      </div>

      <input
        type="password"
        name="confirmPassword"
        placeholder="Confirm Password"
      />
      <div class="form-group">
        {{user.confirmPasswordError}}
      </div>

    </div>
    <div>
      <button class="btn btn-primary" type="submit">
        Sign Up</button>
    </div><br /><br /><br />
  </form>
</div>